<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Clients</h1>
  <%= link_to "New Client", new_client_path(account_slug: @account.slug), class: "btn btn-primary" %>
</div>

<% if @clients.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Company</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= link_to client.name, client_path(account_slug: @account.slug, id: client) %></td>
            <td><%= client.email %></td>
            <td><%= client.phone %></td>
            <td><%= client.company %></td>
            <td>
              <div class="action-buttons">
                <%= link_to "View", client_path(account_slug: @account.slug, id: client), class: "btn btn-sm btn-info" %>
                <%= link_to "Edit", edit_client_path(account_slug: @account.slug, id: client), class: "btn btn-sm btn-warning" %>
                <%= button_to "Delete", client_path(account_slug: @account.slug, id: client), method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    <p class="mb-0">No clients yet. <%= link_to "Create your first client", new_client_path(account_slug: @account.slug) %></p>
  </div>
<% end %>
