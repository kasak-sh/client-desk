<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <div class="text-center mb-4">
          <%= image_tag "clientdesk-logo-horizontal.svg", alt: "ClientDesk", style: "height: 64px;" %>
        </div>
        <h2 class="card-title text-center mb-4">Admin Login</h2>
        <p class="text-muted text-center mb-4">System Administrator Access</p>

        <%= form_with url: admin_login_path, method: :post, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
          </div>

          <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= form.submit "Login", class: "btn btn-dark" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
