<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Users</h1>
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
</div>

<% if @users.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Account</th>
          <th>Role</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.account %>
                <%= link_to user.account.name, admin_account_path(user.account) %>
              <% else %>
                <span class="text-muted">System Admin</span>
              <% end %>
            </td>
            <td><span class="badge bg-<%= user.admin? ? 'danger' : 'primary' %>"><%= user.role.titleize %></span></td>
            <td><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td>
              <div class="action-buttons">
                <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-warning" %>
                <%= button_to "Delete", admin_user_path(user), method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    <p class="mb-0">No users yet. <%= link_to "Create the first user", new_admin_user_path %></p>
  </div>
<% end %>
