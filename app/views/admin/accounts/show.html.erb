<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @account.name %></h1>
  <div class="action-buttons">
    <%= link_to "Edit", edit_admin_account_path(@account), class: "btn btn-warning" %>
    <%= button_to "Delete", admin_account_path(@account), method: :delete,
        data: { confirm: "Are you sure? This will delete all associated data!" },
        class: "btn btn-danger" %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-body">
    <h5>Account Details</h5>
    <dl class="row">
      <dt class="col-sm-3">Status:</dt>
      <dd class="col-sm-9">
        <span class="badge bg-<%= @account.active? ? 'success' : 'secondary' %>">
          <%= @account.status.titleize %>
        </span>
      </dd>

      <dt class="col-sm-3">Created:</dt>
      <dd class="col-sm-9"><%= @account.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>

      <dt class="col-sm-3">Total Users:</dt>
      <dd class="col-sm-9"><%= @users.count %></dd>

      <dt class="col-sm-3">Total Clients:</dt>
      <dd class="col-sm-9"><%= @account.clients.count %></dd>

      <dt class="col-sm-3">Total Bookings:</dt>
      <dd class="col-sm-9"><%= @account.bookings.count %></dd>
    </dl>
  </div>
</div>

<h3>Users (<%= @users.count %>)</h3>
<% if @users.any? %>
  <div class="table-responsive mb-4">
    <table class="table table-sm">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><span class="badge bg-<%= user.admin? ? 'danger' : 'primary' %>"><%= user.role.titleize %></span></td>
            <td>
              <div class="action-buttons">
                <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-warning" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-muted">No users in this account yet.</p>
<% end %>

<h3>Recent Clients</h3>
<% if @clients.any? %>
  <ul class="list-group mb-4">
    <% @clients.each do |client| %>
      <li class="list-group-item"><%= client.name %> - <%= client.email %></li>
    <% end %>
  </ul>
<% else %>
  <p class="text-muted">No clients yet.</p>
<% end %>

<h3>Recent Bookings</h3>
<% if @bookings.any? %>
  <ul class="list-group mb-4">
    <% @bookings.each do |booking| %>
      <li class="list-group-item">
        <%= booking.title %> - <%= booking.scheduled_at.strftime("%b %d, %Y") %>
        <span class="badge bg-<%= booking.status == 'confirmed' ? 'success' : 'warning' %>">
          <%= booking.status.titleize %>
        </span>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-muted">No bookings yet.</p>
<% end %>

<%= link_to "Back to Accounts", admin_accounts_path, class: "btn btn-secondary" %>
