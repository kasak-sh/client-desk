<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @booking.title %></h1>
  <div>
    <%= link_to "Edit", edit_booking_path(@booking), class: "btn btn-warning" %>
    <%= button_to "Delete", @booking, method: :delete,
        data: { confirm: "Are you sure?" },
        class: "btn btn-danger" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h5>Booking Details</h5>
        <dl class="row">
          <dt class="col-sm-4">Client:</dt>
          <dd class="col-sm-8"><%= link_to @booking.client.name, @booking.client %></dd>

          <dt class="col-sm-4">Scheduled At:</dt>
          <dd class="col-sm-8"><%= @booking.scheduled_at.strftime("%B %d, %Y at %I:%M %p") %></dd>

          <dt class="col-sm-4">Duration:</dt>
          <dd class="col-sm-8"><%= @booking.duration_minutes %> minutes</dd>

          <dt class="col-sm-4">Status:</dt>
          <dd class="col-sm-8">
            <span class="badge bg-<%=
              case @booking.status
              when 'pending' then 'warning'
              when 'confirmed' then 'success'
              when 'completed' then 'info'
              when 'cancelled' then 'danger'
              end
            %>">
              <%= @booking.status.titleize %>
            </span>
          </dd>
        </dl>
      </div>
      <div class="col-md-6">
        <h5>Description</h5>
        <p><%= @booking.description %></p>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Back to Bookings", bookings_path, class: "btn btn-secondary" %>
</div>
